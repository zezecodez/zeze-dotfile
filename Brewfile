#specify a directory where we are installing packages
cask_args appdir: '/Applications'

#install packages

tap 'caskroom/homebrew-cask' || true
brew 'git'
brew 'bash-completion'
brew 'tree'
brew 'node'
#might be worth installing node via nodejs.org instead
tap 'neovim/neovim' || true
brew 'neovim'

#need to install java before jenkins
cask 'java'
brew 'jenkins'
brew 'wget'

